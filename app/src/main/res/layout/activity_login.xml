<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackgroundDark"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".activities.LoginActivity">

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/samajLogo"
                android:layout_width="@dimen/size_250dp"
                android:layout_height="@dimen/size_250dp"
                android:layout_gravity="center_horizontal" />

            <EditText
                android:id="@+id/mobileEditText"
                style="@style/TextStyleRegular"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/size_16dp"
                android:layout_marginStart="@dimen/size_16dp"
                android:background="@drawable/edit_text_background"
                android:drawableLeft="@drawable/ic_smartphone"
                android:drawablePadding="@dimen/text_size_8"
                android:elevation="@dimen/size_2dp"
                android:ems="10"
                android:hint="Mobile number"
                android:inputType="number"
                android:maxLines="1"
                android:padding="@dimen/size_8dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/size_16dp"
                android:layout_marginStart="@dimen/size_16dp"
                android:layout_marginTop="@dimen/size_16dp"
                android:background="@drawable/edit_text_background"
                android:elevation="@dimen/size_2dp"
                android:orientation="horizontal"
                android:padding="@dimen/size_8dp">

                <EditText
                    android:id="@+id/passwordEditText"
                    style="@style/TextStyleRegular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/white"
                    android:drawableLeft="@drawable/ic_lock"
                    android:drawablePadding="@dimen/text_size_8"
                    android:ems="10"
                    android:hint="Password"
                    android:inputType="textPassword"
                    android:maxLines="1" />

                <TextView
                    android:id="@+id/forgotText"
                    style="@style/TextStyleMedium"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/text_size_8"
                    android:gravity="end"
                    android:text="Forgot?"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/text_size_12" />

            </LinearLayout>

            <Button
                android:id="@+id/loginButton"
                style="@style/TextStyleMedium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/size_16dp"
                android:layout_marginStart="@dimen/size_16dp"
                android:layout_marginTop="@dimen/size_32dp"
                android:background="@drawable/button_background"
                android:minHeight="@dimen/size_40dp"
                android:text="Login"
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/signUpText"
                style="@style/TextStyleMedium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="@dimen/size_32dp"
                android:padding="@dimen/size_8dp"
                android:layout_marginTop="@dimen/size_8dp"
                android:text="Sign up"
                android:textColor="@color/colorPrimary" />

        </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>